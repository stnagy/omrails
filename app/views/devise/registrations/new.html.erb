<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "form-horizontal"}) do |f| %>
  
  <%= f.error_notification %>

  <%= f.input :name, label: "Name", required: true%> <p/>
  
  <%= f.input :email, label: "Email", placeholder: 'user@example.com', required: true %>
  <p />
  <%= f.input :password,label: "Password", required: true %>
  <p />
  <%= f.input :password_confirmation, label: "Confirm Password", required: true %>

  <div class = 'form-actions'>
  	<%= f.submit "Sign up", class: "btn btn-primary"%>
  </div> 
<% end %>

<%= render "devise/shared/links" %>
